<h2><%= @entry.title %></h2>
<p><%= @entry.content %></p>
<p><%= @entry.created_at.localtime.strftime("%b %d, %Y - %l:%M %P") %></p>
<p><%= @entry.id %></p>

<% if @user && @user.admin_status == "t" %>
  <%= link_to 'Edit', edit_entry_path(@entry) %>
  <br>
  <%= link_to 'Delete', @entry, method: :delete %>
  <br>
<% end %>

<%= link_to 'Home', entries_path %>
