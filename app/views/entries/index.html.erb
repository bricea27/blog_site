<div class="jumbotron">
  <div class="container">
    <nav>
      <button class="btn btn-default home"><%= link_to 'Home', entries_path %></button>
      <div class="login">
        <% if @user %>
          <form method="POST" action="/session">
            <input name="authenticity_token" value="<%= form_authenticity_token() %>" type="hidden">
            <input name="_method" value="DELETE" type="hidden">
            <button class="btn btn-default">Logout</button>
          </form>
        <% else %>
          <a href="/login" class="btn btn-default">Login</a>
        <% end %>
      </div>
    </nav>
    <h1> Bacon and Eggs </h1>
  </div>
</div>

<div class="container">
  <div class="row">
  <% @entries.reverse_each do |entry| %>
    <div class="col-sm-8 col-sm-offset-2 home-entries">
      <h2><%= link_to entry.title, entry %></h2>
      <p><%= entry.content[0, 200] + " . . ." %></p>
      <p class="timestamp"><%= entry.created_at.localtime.strftime("%b %d, %Y") %></p>
    </div>
  <% end %>
  </div>
</div>
