<div class="jumbotron home">
  <div class="container">
    <nav>
      <a href="/"><i class="fa fa-home fa-2x"></i></a>
    </nav>
    <div class="logout">
      <% if @user %>
        <a href="/admin" class="btn btn-default">Admin</a>
        <form method="POST" action="/session">
          <input name="authenticity_token" value="<%= form_authenticity_token() %>" type="hidden">
          <input name="_method" value="DELETE" type="hidden">
          <button class="btn btn-default">Logout</button>
        </form>
      <% end %>
    </div>
    <h1> Bacon and Eggs </h1>
    <h3> A Blog By Ron Swanson </h3>
  </div>
</div>

<div class="container">
  <div class="row">
  <% @entries.reverse_each do |entry| %>
    <div class="col-sm-8 col-sm-offset-2 home-entries">
      <h2><%= link_to entry.title, entry %></h2>
      <p class="preview"><%= entry.content[0, 200] + " . . ." %></p>
      <p class="timestamp"><%= entry.created_at.localtime.strftime("%b %d, %Y") %></p>
    </div>
  <% end %>
  </div>
</div>
